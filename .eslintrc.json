{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
    "linebreak-style": 0,
    "max-classes-per-file": 0,
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off",
    "no-unused-expressions": "off",
    "no-unused-vars": "off",
    "no-plusplus": "off",
    "no-console": "off",
    "one-var": 0
  }
}
